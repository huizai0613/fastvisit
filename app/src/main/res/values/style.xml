<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="shequ_navi_img_style_home">
        <item name="android:layout_width">45dip</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="shequ_navi_text_style_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="user_home_right_img">
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">5dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="content_text_style">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="content_text_title_style">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="content_text_subtitle_style">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="content_edit_style">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:background">@drawable/input_bg_border_selector</item>
    </style>

    <style name="content_edit_single_line_style" parent="content_edit_style">
        <item name="android:singleLine">true</item>
    </style>

    <style name="content_radio_btn_style">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:button">@drawable/radio_btn_selector</item>
    </style>
</resources>