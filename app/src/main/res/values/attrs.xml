<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LabelTextView">
        <attr name="backgroundColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="numColor" format="color"/>

        <attr name="text" format="string"/>
        <attr name="num" format="string"/>

        <attr name="numSize" format="dimension"/>
        <attr name="textSize" format="dimension"/>

        <attr name="labelTopPadding" format="dimension"/>
        <attr name="labelCenterPadding" format="dimension"/>
        <attr name="labelBottomPadding" format="dimension"/>


        <attr name="numStyle">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="textStyle">
            <enum name="normal" value="0"/>
            <enum name="italic" value="1"/>
            <enum name="bold" value="2"/>
        </attr>

        <attr name="direction">
            <enum name="leftTop" value="-45"/>
            <enum name="rightTop" value="45"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="PlusMinusAttr">
        <attr name="maxNum" format="integer"/>
        <attr name="minNum" format="integer"/>
        <attr name="originNum" format="integer"/>
    </declare-styleable>
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="select_single" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1"/>
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="SwitchGroup">
        <attr name="orientation1">
            <flag name="horizontal" value="0"></flag>
            <flag name="vertical" value="1"></flag>
        </attr>
        <attr name="pinned_view1" format="reference" />
        <attr name="pinned_item1" format="reference" />
        <attr name="pinned_item_array1" format="reference" />
    </declare-styleable>
</resources>