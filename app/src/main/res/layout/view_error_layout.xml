<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/pageerrLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_error_layout"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:background="@drawable/base_pagefailed_bg"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/animProgress"
                    style="@style/loading"
                    android:layout_width="30dip"
                    android:layout_height="30dip"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_error_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lines="2"
                android:text="@string/error_view_click_to_refresh"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_error_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/base_error_but_bg"
                android:gravity="center"
                android:paddingBottom="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="10dip"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>