<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/group_list_liner"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/spacing_big"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_big">

    <ImageView
        android:id="@+id/iv_outlet_search_result_icon"
        android:layout_width="@dimen/size_big"
        android:layout_height="@dimen/size_big"
        android:src="@drawable/icon_outlet" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small">

        <LinearLayout
            android:id="@+id/ll_outlet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_outlet_name"
                style="@style/content_text_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/iv_outlet_star"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_small"
                tools:src="@drawable/star0_5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_outlet_title"
            android:layout_marginTop="@dimen/spacing_big"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <TextView
                style="@style/content_text_subtitle_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_address" />

            <TextView
                android:id="@+id/tv_outlet_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/content_text_subtitle_style"
                android:text="@string/advanced_address"
                tools:text="@string/app_name" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_outlet_phone"
            android:layout_width="@dimen/size_big"
            android:layout_height="@dimen/size_big"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_ph" />

        <View
            android:layout_toLeftOf="@+id/iv_outlet_phone"
            android:layout_width="@dimen/size_min"
            android:layout_height="@dimen/size_big"
            android:background="@color/gray_text"/>
    </RelativeLayout>
</LinearLayout>