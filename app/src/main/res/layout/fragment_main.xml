<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg_color"
              android:orientation="vertical">

    <include
        layout="@layout/main_titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/top_viewpager"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

            <include
                layout="@layout/fragment_main_icons"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/padding_big"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_smaill"
                android:paddingTop="@dimen/padding_smaill">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/main_tab1"/>

                    <View
                        style="@style/v_divider"/>

                    <ImageView
                        android:id="@+id/main_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/main_tab2"/>

                </LinearLayout>

                <View
                    style="@style/h_divider"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/main_tab3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/main_tab3"/>

                    <View
                        style="@style/v_divider"/>

                    <ImageView
                        android:id="@+id/main_tab4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@mipmap/main_tab4"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/main_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_default"
                android:scaleType="fitXY"
                android:src="@mipmap/banner_bottom"/>

            <View
                style="@style/v_divider"
                android:background="@color/main_bg_color"
                android:layout_marginTop="@dimen/padding_default"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
